<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme para modo oscuro -->
    <style name="Base.Theme.EmprendimientoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Personaliza los colores del tema oscuro aquí -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarker</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:windowBackground">@color/black</item>

        <!-- Personalización de la barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

</resources>
